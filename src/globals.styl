*, *::before, *::after
	box-sizing border-box
	margin 0
	padding 0

input, button
	font inherit
	background #333
	color inherit
	padding 0.5em
	border solid 0.1rem #666
	margin 0
	border-radius 0.3rem
	text-shadow 0rem 0.1rem 0.1rem #000

input
	display block
	width 100%

h1
	margin-bottom 0.5em

.field
	margin-bottom 0.5em

.small
	font-size 1.2rem

.center
	text-align center
	margin 0 auto
